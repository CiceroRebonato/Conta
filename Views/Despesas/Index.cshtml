@model DespesasControlApp.DTOs.ListDespesasDTO

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm">
        <h1>Despesas</h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <a asp-action="Create" asp-controller="Despesas" class="btn btn-primary btn-lg btn-block">Nova despesa</a>
    </div>
</div>


<div class="row">
    <div class="col-md">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descrição</th>
                    <th>Data de vencimento</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Count > 0)
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Description</td>
                            <td>@item.Date.ToString("dd/MM/yyyy")</td>
                            <td>@(item.Value / 5)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Nenhum registro encontrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


